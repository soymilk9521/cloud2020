<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lr.springcloud.dao.OrderDao">
    <resultMap type="com.lr.springcloud.entities.Order" id="baseResultMap">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="productId" column="product_id" jdbcType="BIGINT"/>
        <result property="count" column="count" jdbcType="INTEGER"/>
        <result property="money" column="money" jdbcType="DECIMAL"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>

    <insert id="create" parameterType="com.lr.springcloud.entities.Order" useGeneratedKeys="true" keyProperty="id">
        insert into t_order(id, user_id, product_id, count, money, status)
        values (null, #{userId}, #{productId}, #{count}, #{money}, 0);
    </insert>

    <update id="update">
        update t_order set status=1
         where user_id = #{userId} and status = #{status};
    </update>



</mapper>